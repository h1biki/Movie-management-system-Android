<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#f4f4f4"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/homelogo2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:scaleType="center"
        app:srcCompat="@drawable/logo" />

    <ListView
        android:id="@+id/watchlistlist"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/homelogo2"/>

    <Button
        android:id="@+id/viewmoviewatchlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/watchlistlist"
        android:layout_marginTop="30dp"
        android:text="VIEW MOVIE DETAIL" />

    <Button
        android:id="@+id/deletemoviewatchlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewmoviewatchlist"
        android:layout_marginTop="30dp"
        android:text="DELETE MOVIE" />

    <TextView
        android:id="@+id/selectedmovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deletemoviewatchlist"
        android:text="TextView" />


</RelativeLayout>

