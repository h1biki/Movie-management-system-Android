<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:id="@+id/movieDetailScrollView">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/homelogo"
            android:layout_width="378dp"
            android:layout_height="59dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:scaleType="center"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/movieName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="1dp"
            android:text="movieName"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/movieCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="movieCountry"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/movieGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="movieGenre"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/movieReleaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="movieReleaseDate"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/movieOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="movieOverview"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="20dp"

             />

        <TextView
            android:id="@+id/movieDirector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Director:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ListView
            android:id="@+id/directorList"
            android:layout_width="wrap_content"
            android:layout_height="81dp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="20dp"

            />

        <TextView
            android:id="@+id/movieCast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cast:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ListView
            android:id="@+id/castList"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="20dp"

            />

        <TextView
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Rating"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:isIndicator="true"
            android:numStars="10"
            android:rating="5">
        </RatingBar>

        <Button
            android:id="@+id/addToWatchList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD WATCHLIST">

        </Button>

        <Button
            android:id="@+id/addToMemoir"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:text="ADD MEMOIR">

        </Button>


    </LinearLayout>
</ScrollView>
